<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".AlbumFragment"
    android:layout_gravity="bottom">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

	    <com.android.volley.toolbox.NetworkImageView
	        android:id="@+id/album_cover"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:adjustViewBounds="true"
	        android:clickable="true"
	        android:contentDescription="Album cover"
	        android:cropToPadding="false"
	        android:scaleType="centerCrop"
	        android:layout_centerVertical="true"
	        />

	     <TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Album Name"
	        android:id="@+id/album_name"
	        android:textSize="32sp"
	        android:layout_marginRight="16dp"
	        android:layout_marginTop="8dp"
	        android:textColor="#ffffffff"
	        android:fontFamily="sans-serif-light"
	        style="@style/overImage"
	        android:layout_above="@+id/album_artist"
	        android:gravity="right"
	        />

	    <TextView
	        style="@style/overImage"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Artist Name"
	        android:id="@+id/album_artist"
	        android:textSize="22sp"
	        android:layout_marginRight="16dp"
	        android:layout_marginTop="8dp"
	        android:textColor="#ffffffff"
	        android:layout_above="@+id/_album_track_list_title"
	        android:gravity="right"
	        />

    	<TextView
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Track List"
	        android:textAllCaps="true"
	        android:id="@+id/_album_track_list_title"
	        android:textColor="@android:color/holo_blue_light"
	        android:paddingLeft="16dp"
	        android:layout_marginTop="8dp"
	        android:layout_alignParentBottom="true"
	        android:background="@color/tint40"
	        />

   </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:layout_weight="1">

		<ListView
		    android:id="@+id/track_list"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:layout_gravity="bottom"
		    android:gravity="center"
		    android:horizontalSpacing="1dp"
		    android:isScrollContainer="true"
		    android:verticalSpacing="1dp"
		    android:layout_marginLeft="16dp"
	    	android:layout_marginRight="16dp"
	   		android:layout_marginTop="8dp">
		</ListView>

	</LinearLayout>

</LinearLayout>
